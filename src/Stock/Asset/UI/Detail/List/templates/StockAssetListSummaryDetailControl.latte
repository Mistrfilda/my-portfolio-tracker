{templateType App\Stock\Asset\UI\Detail\List\StockAssetListSummaryDetailControlTemplate}

<div
        class="mt-8"
        x-data="{
        open: false,
        hiddenColumns: [],
        toggleDropdown() {
            this.open = !this.open
        },
        closeDropdown() {
            this.open = false
        },
        toggleColumn(value) {
            if (this.hiddenColumns.includes(value)) {
                this.hiddenColumns = this.hiddenColumns.filter(v => v !== value)
            } else {
                this.hiddenColumns.push(value)
            }
        },
        isHidden(value) {
            return this.hiddenColumns.includes(value)
        }
    }"
>
    {* Column visibility dropdown *}
    <div class="mb-4 relative inline-block" x-on:keydown.escape.prevent.stop="closeDropdown()">
        <button
                x-on:click="toggleDropdown()"
                type="button"
                class="inline-flex items-center gap-x-2 rounded-lg bg-white px-4 py-2.5 text-sm font-medium text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
            Sloupce
            <svg class="h-5 w-5 text-gray-400 transition-transform" :class="open && 'rotate-180'" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
        </button>

        <div
                x-show="open"
                x-transition:enter="transition ease-out duration-100"
                x-transition:enter-start="opacity-0 scale-95"
                x-transition:enter-end="opacity-100 scale-100"
                x-transition:leave="transition ease-in duration-75"
                x-transition:leave-start="opacity-100 scale-100"
                x-transition:leave-end="opacity-0 scale-95"
                x-on:click.outside="closeDropdown()"
                class="absolute left-0 z-10 mt-2 w-56 origin-top-left rounded-lg bg-white shadow-lg ring-1 ring-black/5 focus:outline-none"
                style="display: none;"
        >
            <div class="py-1">
                {foreach $fields as $key => $field}
                    <button
                            type="button"
                            x-on:click="toggleColumn({$key})"
                            class="flex w-full items-center gap-x-3 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                            :class="isHidden({$key}) && 'bg-gray-50'"
                    >
                        <span class="w-5 h-5 flex-shrink-0" :class="isHidden({$key}) ? 'text-gray-400' : 'text-blue-600'">
                            <template x-if="!isHidden({$key})">
                                {renderSvg App\UI\Icon\SvgIcon::EYE->value, ['class' => 'h-5 w-5']}
                            </template>
                            <template x-if="isHidden({$key})">
                                {renderSvg App\UI\Icon\SvgIcon::EYE_CLOSED->value, ['class' => 'h-5 w-5']}
                            </template>
                        </span>
                        <span class="truncate">{$field}</span>
                    </button>
                {/foreach}
            </div>
        </div>
    </div>

    <div class="overflow-hidden rounded-xl bg-white shadow-sm ring-1 ring-gray-200">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                <tr>
                    {foreach $fields as $key => $field}
                        <th
                                scope="col"
                                class="px-2 py-2.5 text-center text-sm font-semibold text-gray-900"
                                x-show="!isHidden({$key})"
                        >
                            {$field}
                        </th>
                    {/foreach}
                    <th scope="col" class="relative px-2 py-2.5">
                        <span class="sr-only">Akce</span>
                    </th>
                </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                {foreach $sortedStockAssetsPositionsDTOs as $stockPositionDTO}
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="whitespace-nowrap px-2 py-2 text-sm font-medium text-gray-900 text-center" x-show="!isHidden(0)">
                            <a href="#{$stockPositionDTO->getHtmlTarget()}" class="hover:text-blue-600 transition-colors">
                                {$stockPositionDTO->getStockAsset()->getName()}
                            </a>
                        </td>
                        <td class="whitespace-nowrap px-2 py-2 text-sm font-medium text-gray-900 text-center" x-show="!isHidden(1)">
                            {$stockPositionDTO->getStockAsset()->getExchange()->format()}
                        </td>
                        <td class="whitespace-nowrap px-2 py-2 text-sm text-center" x-show="!isHidden(2)">
                                <span class="inline-flex items-center rounded-md bg-gray-100 px-2 py-0.5 text-sm font-medium text-gray-700">
                                    {$stockPositionDTO->getStockAsset()->getAssetCurrentPrice()|assetPriceFormat}
                                </span>
                        </td>
                        {if $assetDetailControlEnum === App\Stock\Asset\UI\Detail\List\StockAssetListDetailControlEnum::OPEN_POSITIONS}
                            <td class="whitespace-nowrap px-2 py-2 text-sm text-gray-900 text-center" x-show="!isHidden(3)">
                                {$stockPositionDTO->getPiecesCount()}
                            </td>
                            <td class="whitespace-nowrap px-2 py-2 text-sm text-gray-900 text-center" x-show="!isHidden(4)">
                                {$stockPositionDTO->getCurrentPriceInCzk()|summaryPriceFormat}
                            </td>
                            <td class="whitespace-nowrap px-2 py-2 text-center" x-show="!isHidden(5)">
                                    <span class="inline-flex items-center rounded-md bg-amber-50 px-2 py-0.5 text-sm font-medium text-amber-700 ring-1 ring-inset ring-amber-600/20">
                                        {if $assetDetailControlEnum === App\Stock\Asset\UI\Detail\List\StockAssetListDetailControlEnum::CLOSED_POSITIONS}
                                            0%
                                        {else}
                                            {$stockPositionDTO->getCurrentPriceInCzk()->getPrice()|ruleOfThree:$totalInvestedAmountInCzk|percentage}
                                        {/if}
                                    </span>
                            </td>
                            <td class="whitespace-nowrap px-2 py-2 text-center" x-show="!isHidden(6)">
                                {var $trend = $stockPositionDTO->getCurrentPriceDiffInBrokerCurrency()->getTrend()}
                                <span class="inline-flex items-center gap-x-1 rounded-full bg-{$trend->getTailwindColor()}-50 px-2 py-0.5 text-sm font-medium text-{$trend->getTailwindColor()}-700 ring-1 ring-inset ring-{$trend->getTailwindColor()}-600/20">
                                        {renderSvg $trend->getSvgIcon()->value, ['class' => 'h-3.5 w-3.5']}
                                    {$stockPositionDTO->getCurrentPriceDiffInBrokerCurrency()->getPercentageDifference()|percentage}
                                    </span>
                            </td>
                            <td class="whitespace-nowrap px-2 py-2 text-sm text-center" x-show="!isHidden(7)">
                                    <span class="font-medium text-{$stockPositionDTO->getCurrentPriceDiffInBrokerCurrency()->getTrend()->getTailwindColor()}-700">
                                        {$stockPositionDTO->getCurrentPriceDiffInBrokerCurrency()->getPriceDifference()|currency:$stockPositionDTO->getCurrentPriceDiffInBrokerCurrency()->getCurrencyEnum()}
                                    </span>
                            </td>
                        {/if}
                        <td class="whitespace-nowrap px-2 py-2 text-sm text-right">
                            <a
                                    href="{plink StockAssetDetail:detail, 'id' => $stockPositionDTO->getStockAsset()->getId()->toString()}"
                                    class="inline-flex items-center rounded-md bg-blue-600 px-2.5 py-1 text-sm font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors"
                            >
                                Detail
                            </a>
                        </td>
                    </tr>
                {/foreach}
                </tbody>
                {if $assetDetailControlEnum === App\Stock\Asset\UI\Detail\List\StockAssetListDetailControlEnum::OPEN_POSITIONS}
                    <tfoot class="bg-gray-50">
                    <tr>
                        <td colspan="4"></td>
                        <td class="whitespace-nowrap px-2 py-2 text-sm font-semibold text-gray-900 text-center">
                            {$totalInvestedAmountInCzk|currency:App\Currency\CurrencyEnum::CZK}
                        </td>
                        <td colspan="4"></td>
                    </tr>
                    </tfoot>
                {/if}
            </table>
        </div>
    </div>
</div>
